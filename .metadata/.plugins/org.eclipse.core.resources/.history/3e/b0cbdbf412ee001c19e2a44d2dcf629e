package ejercicio24;

public class Main {
	public static void main(String[] args) {
		
		for (int i=2; i<=20;i+=2) {
			System.out.println(" ".repeat(10-i/2)
								.concat("\033[1;30;42m")
								.concat("*".repeat(i)).concat("\033[1;30;49m")
								.concat(" ".repeat(10-i/2)));
		}
		System.out.println(" ".repeat(8)
				.concat("\033[1;30;40m")
				.concat("*".repeat(4)).concat("\033[1;30;49m")
				.concat(" ".repeat(8))
				.concat("\n").repeat(2));
		
	}
}

