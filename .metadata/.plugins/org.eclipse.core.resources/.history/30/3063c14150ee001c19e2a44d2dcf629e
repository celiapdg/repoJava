package ejercicio29;

import java.util.ArrayList;

public class Main {
	public static void main(String[] args) {
		ArrayList<String[]> datos = new ArrayList<String[]>();
		String[] header = {"Nombre","Apellidos","Curso","Año"};
		String[] fila1 = {"Laura","López Moreno","1º","2020"};
		String[] fila2 = {"Paco","Herrera Díaz","2º","2018"};
		String[] fila3 = {"Sara","Tala Lara","4º","2021"};
		datos.add(header);
		datos.add(fila1);
		datos.add(fila2);
		datos.add(fila3);
		System.out.println(datos.get(0)[0]);
		
		for (int i=0; i< datos.get(0).length; i++) {
			System.out.printf("\t%s",datos.get(0)[i]);
		}
		System.out.println("\n\t--------------------------------------------");
		for (int j=1; j< datos.size(); j++) {
			for (int k=0; k< datos.get(j).length; k++) {
				System.out.printf("\t%s",datos.get(j)[k]);
			}
			System.out.printf("\n");
		}
	}
	

}
