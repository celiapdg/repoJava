		System.out.println(amarillo+banda);
		System.out.println(amarillo+banda);
		System.out.println(rojo+banda);
		System.out.println(rojo+banda);
		
		System.out.println(salto);
		
		
		// 5
		System.out.println(verde+banda);
		System.out.println(verde+banda);
		System.out.println(verde+banda);
		System.out.println(blanco+banda);
		System.out.println(blanco+banda);
		System.out.println(blanco+banda);
		System.out.println(verde+banda);
		System.out.println(verde+banda);
		System.out.println(verde+banda);
		
		System.out.println(salto);
		
		//6
		System.out.println(negro+banda);
